<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,700&display=swap');

                body {
                    max-width: 1200px;
                    margin: 20px auto;
                    padding: 0 20px;
                    font-family: 'Noto Serf', serif;

                }

                p,
                h1,
                h2,
                h3,
                a,
                ul {
                    margin: 0;
                    padding: 0;
                    text-decoration: none;
                    color: #222;
                }

                /*nav & footer styles*/
                nav {
                    display: flex;
                    justify-content: space-between;
                    padding-bottom: 10px;
                    margin-bottom: 60px;
                    border-bottom: 1px solid #ddd;
                    text-transform: uppercase;
                }

                nav ul {
                    display: flex;
                    align-items: flex-end;
                    justify-content: space-between;
                }

                nav li {
                    list-style-type: none;
                    margin-left: 20px;
                }

                nav h1 {
                    font-size: 3em;
                }

                nav p,
                nav a {
                    color: #777;
                    font-weight: 300;
                }

                footer {
                    color: #777;
                    text-align: center;
                    margin: 80px auto 20px;
                }

                h2 {
                    margin-bottom: 40px;
                }

                h3 {
                    text-transform: capitalize;
                    margin-bottom: 8px;
                }

                .content {
                    margin-left: 20px;
                }

                /* index styles*/
                /* dtails styles*/
                /* create styles*/
                .create-blog form {
                    max-width: 400px;
                    margin: 0 auto;
                }

                .create-blog input,
                .create-blog textarea {
                    display: block;
                    width: 100%;
                    margin: 10px 0;
                    padding: 8px;
                }

                .create-blog label {
                    display: block;
                    margin-top: 24px;
                }

                textarea {
                    height: 120px;
                }

                .create-blog button {
                    margin-top: 30px;
                    background: crimson;
                    color: white;
                    padding: 6px;
                    border: 0;
                    font-size: 1.2em;
                    cursor: pointer;

                }
            </style>
            <div class="create-blog content">
                <form action="/blogs" method="POST">
                    <label for="title">Blog title:</label>
                    <input type="text" id="title" name="title" required>
                    <label for="snippet">Blog snippet:</label>
                    <input type="text" id="snippet" name="snippet" required>
                    <label for="body">Blog body:</label>
                    <textarea id="body" name="body" required></textarea>
                    <button>Submit</button>
                </form>
            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>